generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OAuthToken {
  id           String   @id @default(uuid())
  googleId     String   @unique // from OpenID Connect "sub" claim
  email        String   @unique// from OpenID Connect "email" claim
  refreshToken String
  createdAt    DateTime @default(now())
}